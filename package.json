  "version": "5.0.1",
  "description": "文の敬体(ですます調)、常体(である調)を解析",
  "main": "lib/analyze.js",
  "files": [
    "lib",
    "src"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
